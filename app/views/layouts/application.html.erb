<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>
    <link href="https://code.jquery.com/ui/1.10.3/themes/redmond/jquery-ui.css" rel="stylesheet" media="screen">
    <!-- Bootstrap -->
    <link href="/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- styles -->
    <link href="/assets/styles.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css">
    <link href="/assets/form-helpers/css/bootstrap-formhelpers.min.css" rel="stylesheet">
    <link href="/assets/select/bootstrap-select.min.css" rel="stylesheet">
    <link href="/assets/tags/css/bootstrap-tags.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/10.0.0/css/bootstrap-slider.min.css" />
    <link href="/assets/forms.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
  	<div class="header">
	     <div class="container">
	        <div class="row">
	           <div class="col-md-5">
	              <!-- Logo -->
	              <div class="logo">
	                 <h1><a href="/"><i class="glyphicon glyphicon-briefcase"></i> <span>Stock eM</span></a></h1>
	              </div>
	           </div>
	           <div class="col-md-2 pull-right user_name_header">
	              <% if logged_in? %>
                  <%= current_user.name %>
                  <%= link_to "Log out", logout_path, method: :delete %>
                <% end %>
	           </div>
	        </div>
	     </div>
	</div>

    <div class="page-content">
    	<div class="row">
        <% flash.each do |message_type, message| %>
          <% message_type = "success" if message_type == "notice" %>
          <div class="alert alert-<%= message_type %>" style="width: 98%; margin-left: 10px;"><%= message %></div>
        <% end %>

      <% if logged_in? %>
		    <%= render 'layouts/sidebar' %>
      <% end %>
		  <%= yield %>
		</div>
    </div>
    <%= render 'layouts/footer' %>


    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/assets/jquery.js"></script>
    <script src="/assets/rails.js"></script>
    <script src="https://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/form-helpers/js/bootstrap-formhelpers.min.js"></script>

    <script src="/assets/select/bootstrap-select.min.js"></script>

    <script src="/assets/tags/js/bootstrap-tags.min.js"></script>

    <script src="/assets/mask/jquery.maskedinput.min.js"></script>

    <script src="/assets/moment/moment.min.js"></script>

    <script src="/assets/wizard/jquery.bootstrap.wizard.min.js"></script>
    <script src="/assets/cocoon.js"></script>

     <!-- bootstrap-datetimepicker -->
     <link href="/assets/bootstrap-datetimepicker/datetimepicker.css" rel="stylesheet">
     <script src="/assets/bootstrap-datetimepicker/bootstrap-datetimepicker.js"></script>


    <link href="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet"/>
    <script src="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap3-editable/js/bootstrap-editable.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/10.0.0/bootstrap-slider.min.js"></script>
    <script type="text/javascript" src="/assets/custom.js"></script>
  </body>
</html>
