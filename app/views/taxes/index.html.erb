<% provide(:title, "Settings :: Taxes") %>
<div class="col-md-10">
  <div class="content-box-large">
    <div class="panel-heading">
       <div class="panel-title">Taxes</div>
       <div class="panel-options">
         <%= link_to new_tax_path do %>
           <i class="glyphicon glyphicon-plus" title="Add new tax type"></i>
         <% end %>
       </div>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Percentage</th>
              <th>Active</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @taxes.each do |tax| %>
              <tr>
                <td><%= tax.name %></td>
                <td><%= tax.perc %></td>
                <td><%= tax.is_active ? 'Yes' : 'No' %></td>
                <td>
                  <%= link_to tax do %>
                    <i class="glyphicon glyphicon-list-alt" title="View Tax"></i>
                  <% end %>    
                </td>
                <td>
                  <%= link_to edit_tax_path(tax) do %>
                    <i class="glyphicon glyphicon glyphicon-edit" title="Edit Tax"></i>
                  <% end %>  
                </td>
                <td>
                  <%= link_to tax, method: :delete, data: { confirm: 'Are you sure?' }  do %>
                    <i class="glyphicon glyphicon glyphicon-trash" title="Delete Tax"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
