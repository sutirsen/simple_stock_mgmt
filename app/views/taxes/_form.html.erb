<%= form_with(model: tax, local: true, class: "form-horizontal", role: "form") do |form| %>
  <%= render 'shared/error_messages', object: tax %>

  <div class="form-group">
    <%= form.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, id: :tax_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :perc, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :perc, id: :tax_perc, class: "form-control" %>
    </div>
  </div>

  <div class="checkbox">
    <label>
      <%= form.check_box :is_active, id: :tax_is_active %> Active?
    </label>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
