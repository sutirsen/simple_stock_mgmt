<% provide(:title, "Parties") %>
<div class="col-md-10">
	<div class="content-box-large">
		<div class="panel-heading">
		   <div class="panel-title">Parties</div>
	     <div class="panel-options">
	       <%= link_to new_third_party_path do %>
	         <i class="glyphicon glyphicon-plus" title="Add new party"></i>
	       <% end %>

	     </div>
	  </div>
    <div class="panel-body">
			<div class="table-responsive">
				<table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Address</th>
              <th>Phone</th>
              <th>GST No</th>
              <th>PAN No</th>
              <th>Dues</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @third_parties.each do |third_party| %>
              <tr>
                <td><%= third_party.name %></td>
                <td><%= third_party.address %></td>
                <td><%= third_party.phn_number %></td>
                <td><%= third_party.gst_number %></td>
                <td><%= third_party.pan %></td>
                <td><%= third_party.due %></td>
                <td>
									<%= link_to third_party do %>
			              <i class="glyphicon glyphicon-list-alt" title="View"></i>
			            <% end %>
								</td>
                <td>
									<%= link_to edit_third_party_path(third_party) do %>
			              <i class="glyphicon glyphicon glyphicon-edit" title="Edit"></i>
			            <% end %>
								</td>
	              <td>
									<%= link_to third_party, method: :delete, data: { confirm: 'Are you sure?' } do %>
			              <i class="glyphicon glyphicon glyphicon-trash" title="Delete"></i>
			            <% end %>
								</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
