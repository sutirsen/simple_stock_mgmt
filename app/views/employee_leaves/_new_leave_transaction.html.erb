<%= form_for leaveTrans, html: { class: "form-horizontal" } do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.hidden_field :employee_id, value: employee.id %>
    <div class="form-group">
      <%= f.label :employee_leave_id, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select :employee_leave_id, options_for_select(employee_leaves.map{|el|[el.type_of_leave, el.id]}), {},{class: "form-control"} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :start_date, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.date_select :start_date, id: :leave_start_date, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :end_date, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.date_select :end_date, id: :leave_end_date, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :description, id: :leave_descriptione, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Add Leave', class: 'btn btn-primary' %>
        </div>
    </div>
<% end %>
