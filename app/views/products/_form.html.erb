<%= form_with(model: product, local: true, class: "form-horizontal", role: "form") do |form| %>
  <%= render 'shared/error_messages', object: product %>

  <div class="form-group">
    <%= form.label :name , class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, id: :product_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description , class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_area :description, id: :product_description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :type , class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :product_type, id: :product_product_type, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :packing , class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :packing, id: :product_packing, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :unit , class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :unit, id: :product_unit, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :trading_price, value: "Trading Price (per unit)", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :trading_price, id: :product_trading_price, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :mrp, value: "MRP (per unit)", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :mrp, id: :product_mrp, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit %>
    </div>
  </div>
<% end %>
