<% provide(:title, "Employees") %>
<div class="col-md-10">
	<div class="content-box-large">
		<div class="panel-heading">
		   <div class="panel-title">Employees</div>
	     <div class="panel-options">
	       <%= link_to new_employee_path do %>
	         <i class="glyphicon glyphicon-plus" title="Add new employee"></i>
	       <% end %>
	     </div>
	  </div>
		<div class="panel-body">
			<div class="table-responsive">
				<table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Company</th>
              <th>Phone</th>
              <th>Aadhar card no</th>
              <th>Date of joining</th>
              <th>Designation</th>
              <th>Salary</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @employees.each do |employee| %>
              <tr>
                <td><%= employee.name %></td>
                <td><%= employee.company.company_name %></td>
                <td><%= employee.phone_no %></td>
                <td><%= employee.aadhar_card_no %></td>
                <td><%= employee.date_of_joining %></td>
                <td><%= employee.designation %></td>
                <td><%= employee.salary %></td>
                <td>
									<%= link_to employee do %>
			              <i class="glyphicon glyphicon-list-alt" title="View"></i>
			            <% end %>
								</td>
	              <td>
									<%= link_to edit_employee_path(employee) do %>
			              <i class="glyphicon glyphicon glyphicon-edit" title="Edit"></i>
			            <% end %>
								</td>
	              <td>
									<%= link_to employee, method: :delete, data: { confirm: 'Are you sure?' } do %>
			              <i class="glyphicon glyphicon glyphicon-trash" title="Delete"></i>
			            <% end %>
								</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
